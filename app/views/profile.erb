<h2>My Stations</h2>

<% current_user.stations.each do |station| %>
  <div>
   <div class="station-name"><a href="/stations/<%= station.id %>"><h2><%= station.name %></h2></a></div>
    <% station.lines.each do |line| %>
      <div class="line-icon" id="<%= line.name.downcase %>">&nbsp;</div>
    <% end %>
    <div class="delete-x"><a href="/delete/station/<%= station.id %>">x</a></div>
  </div>

<% end %>

