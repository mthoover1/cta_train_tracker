<div class="line-header" id="<%= @line.name.downcase %>"><h2><%= @line.name %></h2></div>

<div class="vertical-map" style="background-color: gray">
  
</div>

<% @line.stations.each do |station| %>
  <div>
   <div class="station-name"><a href="/stations/<%= station.id %>"><h2><%= station.name %></h2></a></div>

    <% station.lines.each do |line| %>
      <% if line.name != @line.name %>
      <div class="line-icon" id="<%= line.name.downcase %>">&nbsp;</div>
      <% end %>
    <% end %>
  </div>
<% end %>

